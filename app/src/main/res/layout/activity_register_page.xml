<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.RegisterPage"
    android:background="#F6F2F2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KAYIT OL"
                android:layout_marginTop="25dp"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="#121417"></TextView>

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/circleImage"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/gallery"
                   android:onClick="circleImageClick"
                   android:layout_marginTop="15dp"
                   app:civ_border_width="1dp"
                   android:layout_gravity="center"
                   app:civ_border_color="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İsim"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:elevation="5dp"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:hint="Adınızı giriniz"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="137dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soyisim"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/surnameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:hint="Soyadınızı giriniz"
                android:elevation="5dp"
                android:padding="15dp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="137dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kullanıcı adı"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/userNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:elevation="5dp"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:hint="Kullanıcı adınızı giriniz"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="137dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İl Seçiniz"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"/>

            <Spinner
                android:id="@+id/mySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:elevation="5dp"
              />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İlçe"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"/>

            <Spinner
                android:id="@+id/locationSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:hint="Email giriniz"
                android:elevation="5dp"
                android:padding="15dp"
                android:inputType="textWebEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="137dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Şifre"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:hint="Şifre giriniz"
                android:elevation="5dp"
                android:padding="15dp"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="137dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Şifre Tekrar"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/againPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:hint="Şifrenizi tekrar giriniz"
                android:elevation="5dp"
                android:padding="15dp"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="137dp" />

            <Button
                android:id="@+id/saveButton"
                android:onClick="saveOnClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kayıt Ol"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:background="@drawable/butonstyle"/>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>